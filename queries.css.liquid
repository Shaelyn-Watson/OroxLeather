  .first { clear: none; }
  .product-index:nth-child(2n+1), .article-index:nth-child(2n+1) { clear: left; }  

  #basket-right { text-align: center; }
  
  
  #shopping-cart thead { display: none; }
  #shopping-cart td { clear: left; display: block; }

  .cart-title {
    display: block;
    text-align: center;
    margin-top: 20px;
    margin-bottom: 20px;
  }

  .cart-image {
    display: block;
    text-align: center;
  }  

  td.cart-price {
    text-align: center;
  }  


  td.cart-price, td.cart-remove, td.cart-quantity, .cart-total {
    clear: none! important;
    float: left;
    width: 23%;
    margin: 1%;
    display: inline-block! important; 
    line-height: 48px;
    border-bottom: 0! important;
  }

  #shopping-cart tr {
    border-bottom: 1px solid {{ settings.dotted_color }};
  }

  .collection-info h3 { 
    font-size: 15px;  
  }

}
